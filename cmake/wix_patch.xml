<?xml version="1.0" encoding="UTF-8"?>
<CPackWiXPatch>
    <!-- Desktop Shortcut -->
    <CPackWiXFragment Id="CM_CP_bin.TheHQProject.exe">
        <DirectoryRef Id="TARGETDIR">
            <Component Id="DesktopShortcutComponent" Guid="*">
                <Shortcut Id="DesktopShortcut"
                          Directory="DesktopFolder"
                          Name="TheHQProject"
                          Target="[INSTALL_ROOT]bin\TheHQProject.exe"
                          WorkingDirectory="CM_DP_bin"
                          Icon="ProductIcon.ico"
                          IconIndex="0"
                          Description="A study time tracker application" />
                <RegistryValue Root="HKCU"
                               Key="Software\NaviTheCoderboi\TheHQProject"
                               Name="DesktopShortcut"
                               Type="integer"
                               Value="1"
                               KeyPath="yes" />
            </Component>
        </DirectoryRef>
        
        <!-- Start Menu Shortcut -->
        <DirectoryRef Id="ApplicationProgramsFolder">
            <Component Id="StartMenuShortcutComponent" Guid="*">
                <Shortcut Id="StartMenuShortcut"
                          Name="TheHQProject"
                          Target="[INSTALL_ROOT]bin\TheHQProject.exe"
                          WorkingDirectory="CM_DP_bin"
                          Icon="ProductIcon.ico"
                          IconIndex="0"
                          Description="A study time tracker application" />
                <!-- WebView2 Download Shortcut -->
                <Shortcut Id="WebView2DownloadShortcut"
                          Name="Download WebView2 Runtime"
                          Target="https://go.microsoft.com/fwlink/p/?LinkId=2124703"
                          Description="Download Microsoft Edge WebView2 Runtime" />
                <RemoveFolder Id="CleanUpApplicationProgramsFolder" On="uninstall" />
                <RegistryValue Root="HKCU"
                               Key="Software\NaviTheCoderboi\TheHQProject"
                               Name="StartMenuShortcut"
                               Type="integer"
                               Value="1"
                               KeyPath="yes" />
            </Component>
        </DirectoryRef>
    </CPackWiXFragment>
</CPackWiXPatch>